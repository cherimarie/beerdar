<div id="listy">
<h1>What up, drinker</h1>
<h4>Your location is  <%=  Geocoder.address(cookies[:lat_lng].split("|")) %></h4>
<br />

<br />

<% if params[:view_all] == "y" %>
	<h4>Here's some happy hours near you: </h4>
	&nbsp;&nbsp;<%= link_to "Show Currently Running Happy Hours", controller: "map", action: "list", :params => { :view_all => "n" } %><br />
	&nbsp;&nbsp;<%= link_to "Map Mode", controller: "map", action: "index", :params => { :view_all => "n" } %> 
<% else %>
	<h4> Here's some currently running happy hours near you: </h4>
	&nbsp;&nbsp;<%= link_to "Show All Happy Hours", controller: "map", action: "list", :params => { :view_all => "y" } %><br />
	&nbsp;&nbsp;<%= link_to "Map Mode", controller: "map", action: "index", :params => { :view_all => "y" } %> 
<% end %>
<br />
<br />

<ul>
<% @list_data.each do |bar| %>
	<% bar.happy_hours.each do |hh| %>
	<% if hh.open_now? || params[:view_all] == "y" %>

		<li>
			<ul>
				<li><strong>
			<%= bar.name %>
			</strong></li>
			<li>
				<%= bar.address %>
			</li><li>
				<%= pretty_weekdays(hh.days) %>
			</li><li>
				<%= hh.start_time.strftime('%-l:%M %p') + " - " + hh.end_time.strftime('%-l:%M %p') %>
			</li><li>
				<% hh.show_bargains.each do |barg| %>
					<%= barg.deal %></li>
				<% end %>
			</ul>
		</li>
		<% end %>
	<% end %> <!--end of if statement -->
<% end %>
</ul>

</div>
